<Window x:Class="AppointmentScheduler.View.CustomersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppointmentScheduler.View"
        mc:Ignorable="d"
        Title="CustomersWindow" Height="450" Width="400">
    <Grid>
        <DataGrid ItemsSource="{Binding Customers}" SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"  Margin="18,68,18,55"/>
        <Label Content="Customers" FontSize="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="53" Width="205"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="18,384,18,10">
            <Button Content="Add Customer" Margin="5"/>
            <Button Content="Update Customer" Margin="5"/>
            <Button Content="Delete Customer" Margin="5"/>
        </StackPanel>

    </Grid>
</Window>
