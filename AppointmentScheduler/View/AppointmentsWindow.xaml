<Window x:Class="AppointmentScheduler.View.AppointmentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppointmentScheduler.View"
        mc:Ignorable="d"
        Title="AppointmentsWindow" Height="450" Width="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Appointments}" SelectedItem="{Binding SelectedAppointment, Mode=TwoWay}"  Margin="18,68,18,55"/>
        <Label Content="Appointments" FontSize="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="53" Width="205"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="18,384,18,10">
            <Button Command="{Binding AddAppointment}" Width="100" Content="Add Customer" Margin="5"/>
            <Button Command="{Binding UpdateAppointment}" Width="100" Content="Update Customer" Margin="5"/>
            <Button Command="{Binding DeleteAppointment}" Width="100" Content="Delete Customer" Margin="5"/>
        </StackPanel>

    </Grid>
</Window>
